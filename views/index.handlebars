<div class="container">
  <h1>Eat Da Burger!</h1>
  
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers to Eat</h2>

      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}} <form action="/{{this.id}}?_method=PUT" method="POST">
                <button type="submit">EAT ME</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    
    <div class="col-md-6">
      <h2>Devoured Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2>Add a Burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="burger_name">
    </div>

    <button type="submit">Add me</button>
  </form>
</div>